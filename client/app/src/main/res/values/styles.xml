<?xml version="1.0" encoding="utf-8"?>
<!-- Base application theme -->
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color (toolbar, etc) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Darker variant of the primary color (status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Color for floating action buttons, etc -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Change the secondary color (buttons, etc) to green -->
        <item name="android:colorButtonNormal">@color/colorSecondary</item> <!-- For buttons -->
        <item name="android:textColorSecondary">@color/colorSecondary</item> <!-- For secondary text color -->

        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>


</resources>
