<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titlePharmacyInfoPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pharmacy Info"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp" />

    <!-- Cancel Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:fabCustomSize="40dp"
        android:src="@drawable/baseline_close_24"
        app:backgroundTint="@color/colorPrimary"
        android:tint="@color/white"
        android:contentDescription="TODO" />


    <RelativeLayout
        android:id="@+id/nameContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlePharmacyInfoPanel"
        android:layout_marginTop= "16dp"
        android:layout_marginHorizontal="16dp">

        <!-- Name Label TextView -->
        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Put pharmacy name here"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/favIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fav_icon_border"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"/>
    </RelativeLayout>



    <!-- Container for ImageView and Cancel Button -->
    <RelativeLayout
        android:id="@+id/photoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameContainer"
        android:layout_margin="16dp">

        <!-- ImageView for displaying the selected photo -->
        <ImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:contentDescription="TODO" />

        <!-- Cancel Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnGoToMapLocation"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            app:fabCustomSize="35dp"
            android:src="@drawable/map_button_icon"
            app:backgroundTint="@color/colorPrimary"
            android:tint="@color/white"
            android:contentDescription="TODO" />

    </RelativeLayout>


    <!-- Address Label TextView -->
    <TextView
        android:id="@+id/labelAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put pharmacy address here"
        android:textSize="16sp"
        android:layout_below="@id/photoContainer"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Latitude Label TextView -->
    <TextView
        android:id="@+id/labelLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put pharmacy latitude here"
        android:textSize="16sp"
        android:layout_below="@id/labelAddress"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp" />

    <!-- Longitude Label TextView -->
    <TextView
        android:id="@+id/labelLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put pharmacy longitude here"
        android:textSize="16sp"
        android:layout_below="@id/labelLatitude"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp" />

    <!-- Medicine Buttons Container -->
    <LinearLayout
        android:id="@+id/medicineButtonsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelLongitude"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp">

        <!-- Check Inventory Buton -->
        <Button
            android:id="@+id/btnCheckInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Inventory"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary" />

        <!-- Create Medicine Button -->
        <Button
            android:id="@+id/btnCreateMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Medicine"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary" />

        <!-- Add remove stock button -->
<Button
            android:id="@+id/btnAddRemoveStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add/Remove Stock"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary" />

    </LinearLayout>



</RelativeLayout>
